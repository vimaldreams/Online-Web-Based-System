@model CollateralCreatorAdminWeb.Models.Font

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(new { searchString = ViewBag.currentFilter }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Font</legend>

        @Html.HiddenFor(model => model.FontID)

        <div class="editor-label">
            @Html.LabelFor(model => model.FontTypeID, "FontType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FontTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.FontTypeID)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Size)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Size)
            @Html.ValidationMessageFor(model => model.Size)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Bold)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bold)
            @Html.ValidationMessageFor(model => model.Bold)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Italic)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Italic)
            @Html.ValidationMessageFor(model => model.Italic)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Underline)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Underline)
            @Html.ValidationMessageFor(model => model.Underline)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Strikethrough)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Strikethrough)
            @Html.ValidationMessageFor(model => model.Strikethrough)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Color)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Color)
            @Html.ValidationMessageFor(model => model.Color)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
                @Html.DropDownListFor(model => model.Name, new SelectList(new string[] {"XeroxSans-Bold",
                                                                                    "HelveticaNeue",
                                                                                    "HelveticaNeue-Bold",
                                                                                    "XeroxSans-Light",
                                                                                    "HelveticaNeue-Light",
                                                                                    "Arial-Bold",
                                                                                    "ArialMT",
                                                                                    "Arial",
                                                                                    "XeroxSans"}), "Select FontName")
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { currentFilter = ViewBag.currentFilter })
</div>
