@model CollateralCreatorAdminWeb.Models.Page

@{
    ViewBag.Title = "Page create";
}

@section AddToHead{

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<h2>Page create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Page</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.PageNumber, "Number of Pages")
        </div>
        <div class="editor-field">
            @Html.TextBox("NoOfPages", 0)
        </div>     
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.TemplateID, "Template")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TemplateID, new SelectList(ViewBag.Templates as System.Collections.IEnumerable, "Value", "Text"), "Please select")
           
            @Html.ValidationMessageFor(model => model.TemplateID)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.PartnerBranded, "Partner branded")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PartnerBranded)
            @Html.ValidationMessageFor(model => model.PartnerBranded)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Height)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Height, new { @Value = "842" })
            @Html.ValidationMessageFor(model => model.Height)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Width)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Width, new { @Value = "595" })
            @Html.ValidationMessageFor(model => model.Width)
        </div>
         <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Rotation)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Rotation, new { @Value = "0" })
            @Html.ValidationMessageFor(model => model.Rotation)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { currentFilter = ViewBag.currentFilter })
</div>

